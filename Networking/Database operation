## pip3 install mysql-connector-python

import mysql.connector;
conn = mysql.connector.connect(host='localhost',database='dbname',user='dbuser',password='dbpassword')

if conn.is_connected():
    print("connected to DB")

cursor = conn.cursor()                  # to do database operation
cursor.execute('select * from user')



##fetch one record at a time

#row = cursor.fetchone()

#while row is not None:
 #   print(row)
  #  row=cursor.fetchone()
###till here for one data at a time




##fetch all data at a time
rows = cursor.fetchall()
print("total number of records", cursor.rowcount)

for row in rows:
    print(row)
### till here 


cursor.close()
conn.close()
